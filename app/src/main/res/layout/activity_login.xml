<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_marginLeft="@dimen/fab_margin"
        android:layout_marginRight="@dimen/fab_margin"
        android:orientation="vertical">
        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginLeft="@dimen/fab_margin"
                android:layout_marginRight="@dimen/fab_margin"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_splash_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fab_margin"
                    android:scaleType="fitXY"
                    android:src="@drawable/logo"/>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_storeId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_storeId"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fab_margin"
                            android:gravity="center"
                            android:drawablePadding="@dimen/text_padding"
                            android:ems="12"
                            android:hint="Store Id"
                            android:text=""
                            android:inputType="phone"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_medium" />

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:src="@drawable/ic_store"/>

                    <TextView
                        android:id="@+id/storeIdError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:text="" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_username"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:drawablePadding="@dimen/text_padding"
                            android:ems="12"
                            android:hint="Username"
                            android:text=""
                            android:inputType="textNoSuggestions"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_medium"/>

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:src="@drawable/ic_action_username"/>

                    <TextView
                        android:id="@+id/userNameError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:text="" />

                </FrameLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/til_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/edt_password"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:drawablePadding="@dimen/text_padding"
                            android:ems="12"
                            android:hint="Password"
                            android:text=""
                            android:inputType="textPassword|textNoSuggestions"
                            android:singleLine="true"
                            android:textSize="@dimen/text_size_medium"/>

                    </android.support.design.widget.TextInputLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:src="@drawable/ic_action_password"/>

                    <TextView
                        android:id="@+id/passwordError"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|right"
                        android:text="" />

                </FrameLayout>


                <Button
                    android:id="@+id/btn_authenticate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@color/colorPrimary"
                    android:text="LOGIN"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_size_medium"/>


                <TextView
                    android:id="@+id/tv_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="5"
                    android:textAlignment="center"
                    android:gravity="center_horizontal|top"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:textSize="@dimen/text_size_medium"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/help"/>



            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="version name"
        android:textSize="@dimen/text_size_medium"
        android:textColor="@color/colorPrimary"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="5dp"
        android:id="@+id/textViewVersionName"/>
</LinearLayout>


